@typeparam TItem

<div class="multiselect">
    <div class="checkboxes">
        @if (DataSource != null)
        {
            @foreach (var item in DataSource)
            {
                <label>
                    <input type="checkbox" checked="@SelectedItems.Contains(item)" @onchange="() => ToggleItem(item)" />
                    @GetLabel(item)
                </label>
            }
        }
    </div>
</div>

@code {
    [Parameter] public List<TItem> DataSource { get; set; }
    [Parameter] public List<TItem> SelectedItems { get; set; }
    [Parameter] public EventCallback<List<TItem>> SelectedItemsChanged { get; set; }
    [Parameter] public Func<TItem, string>? LabelFunc { get; set; }

    private string GetLabel(TItem item)
    {
        return LabelFunc?.Invoke(item) ?? item?.ToString() ?? string.Empty;
    }

    private async Task ToggleItem(TItem item)
    {
        if (SelectedItems.Contains(item))
        {
            SelectedItems.Remove(item);
        }
        else
        {
            SelectedItems.Add(item);
        }
        await SelectedItemsChanged.InvokeAsync(SelectedItems);
    }
}